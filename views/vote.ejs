<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head %>
    <title>Vote Page</title>
  </head>

  <body id="index">
  <% include ./partials/_header %>
  <div class="container">
    <ul id="sortable">
      <% for(let item in candidates) { %>
      <% let candidate = candidates[item]; %>
      <div class="row" id=<%= candidate['id'] %>>
        <li class="col-lg-6">
          <h3 class="candidateName"><%= candidate['candidate'] %></h3>
          <span class="candidateDesc"><%= candidate['description'] %></span>
        </li>
      </div>
      <% } %>
    </ul>
    <form id="voteSubmitForm">
      <div class="row">
        <div class="form-group col-lg-6">
          <label for="voterName">Name: </label>
          <input type="text" class="form-control" name="voterName" placeholder="Enter your name" required>
          <p id="errorMsg">Please enter your name before voting.</p>
        </div>
      </div>
      <div class="row">
        <button id="voteSubmit" type="submit">Submit</button>
      </div>
    </form>
  </div><!-- /.container -->

  <% include ./partials/_body-scripts %>
  </body>
</html>
