<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head %>
    <title>Results Page</title>
  </head>

  <body>
  <% include ./partials/_header %>
  <div class="container">
    <div class="col-lg-8">
      <canvas id="myChart" width="400" height="400"></canvas>
    </div>
  </div><!-- /.container -->
  <% include ./partials/_body-scripts %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
  <script>
    var ctx = document.getElementById("myChart");
    var candidates = <%- JSON.stringify(candidates) %>;
    var labels = [];
    var scores = [];
    for (let item in candidates) {
      let candidate = candidates[item];
      labels.push(candidate.candidate);
      scores.push(candidate.points);
    }
    var myChart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
            labels: labels,
            datasets: [{
                label: 'total ranking',
                data: scores,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                xAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
    // console.log(getTest);
    // for (let item in candidates) {
    //   let candidate = candidates[item];
    //   myChart.labels.push(candidate.candidate);
    // }
    </script>
  </body>
</html>
